# Server
NODE_ENV=development
PORT=2002

# Database
MONGODB_URI=mongodb://localhost:27017/food-delivery

# JWT
JWT_ACCESS_SECRET=your-access-token-secret-key-min-32-chars-here
JWT_REFRESH_SECRET=your-refresh-token-secret-key-min-32-chars-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Service (placeholder for now)
EMAIL_FROM=noreply@fooddelivery.com
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=15
PASSWORD_RESET_EXPIRY=15
EMAIL_VERIFICATION_EXPIRY=24

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173
