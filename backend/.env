# Server
NODE_ENV=development
PORT=2002

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/food_delivery_db

# JWT
JWT_ACCESS_SECRET=your_jwt_access_secret_key_min_32_chars_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_key_min_32_chars_here_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=15
PASSWORD_RESET_EXPIRY=15
EMAIL_VERIFICATION_EXPIRY=24

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:5173